<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="108dp" android:layout_height="133dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/category2x" />

    <ImageView
        android:id="@+id/cate_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/soccer2x"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        android:layout_marginTop="22dp"/>

    <TextView
        android:id="@+id/cate_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/nanumsquare"
        android:text="스포츠"
        android:textColor="#ffffff"
        android:textSize="14dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="23dp"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"  />

    <TextView
        android:id="@+id/cate_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/nanumsquare"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/warmGrey"
        android:textSize="10dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintBottom_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/nanumsquare"
        android:text="개의 동아리"
        android:textColor="@color/warmGrey"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/cate_count" />
</androidx.constraintlayout.widget.ConstraintLayout>