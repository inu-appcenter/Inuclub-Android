<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="16dp"
    android:layout_marginHorizontal="26dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="3dp">

        <TextView
            android:id="@+id/rc_clubname"
            android:text="동아리"
            android:textSize="16dp"
            android:textColor="#352641"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/rc_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="날짜"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/lightSalmon"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rc_contents"
            android:text="내용"
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#998fa2"
            android:maxLines="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="3dp">

            <TextView
                android:id="@+id/rc_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="시간"
                android:layout_weight="1"
                android:textColor="#998fa2"
                android:maxLines="1"
                android:paddingEnd="3dp"/>

            <TextView
                android:id="@+id/rc_location"
                android:text="장소"
                android:textSize="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#998fa2"
                android:maxLines="1"/>
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightBlueGrey"
        android:layout_marginTop="16dp"/>

</LinearLayout>

