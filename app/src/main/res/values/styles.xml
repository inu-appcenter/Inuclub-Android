<resources>

    <!-- BottomNavigation -->
    <style name="BottomNavigation" parent="HorizontallyFullSizedView">
        <item name="android:background">?attr/barBackground</item>
        <item name="itemTextColor">?attr/barTextColor</item>
        <item name="itemIconTint">?attr/barIconColor</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <!-- Dark Toolbar -->
    <style name="Toolbar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextAppearance">@style/ToolbarText</item>
        <item name="titleTextColor">?android:attr/textColorPrimaryInverse</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>
    <style name="ToolbarText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:background">@null</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/textToolbar</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Custom toolbar -->
    <style name="HomeToolbar" parent="Toolbar">
        <item name="android:background">?android:attr/windowBackground</item>
    </style>

    <style name="HorizontallyFullSizedView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>